<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义圆形（圆角）图片，也可用于普通图片-->
    <declare-styleable name="CircleImageView">
        <attr name="type" format="enum">
            <enum name="none" value="0" />  <!--普通-->
            <enum name="round" value="1" />  <!--圆形-->
            <enum name="rectangle" value="2" /> <!--圆角-->
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <!--自定义圆角（可加边框）ImageView-->
    <declare-styleable name="MLImageView">
        <attr name="ml_border_color" format="color" />
        <attr name="ml_border_width" format="dimension" />
        <attr name="ml_radius" format="dimension" />
        <attr name="ml_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <!--自定义button-->
    <declare-styleable name="CurrButtonFrameLayout">
        <!--左图-->
        <attr name="leftImage" format="reference"/>
        <!--右图-->
        <attr name="rightImage" format="reference"/>
        <!--左边文字-->
        <attr name="leftText" format="reference|string"/>
        <!--右边文字-->
        <attr name="rightText" format="reference|string"/>
        <!--右边hint-->
        <attr name="rightHintText" format="reference|string"/>
        <!--左边文字颜色-->
        <attr name="leftTextColor" format="color|reference"/>
        <!--右边文字颜色-->
        <attr name="rightTextColor" format="color|reference"/>
        <!--右边hint颜色-->
        <attr name="rightHintColor" format="color|reference"/>
        <!--是否显示分割线-->
        <attr name="showLine" format="reference|boolean"/>
    </declare-styleable>

    <!--banner-->
    <declare-styleable name="MZBannerView">
        <attr name="open_mz_mode" format="boolean"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="indicatorPaddingLeft" format="dimension"/>
        <attr name="indicatorPaddingRight" format="dimension"/>
        <attr name="indicatorPaddingTop" format="dimension"/>
        <attr name="indicatorPaddingBottom" format="dimension"/>
        <attr name="indicatorAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="middle_page_cover" format="boolean"/>
    </declare-styleable>

    <!--自定义进度条-->
    <declare-styleable name="RectangleRadioSeekBar">
        <attr name="pro_color" format="color"/> <!--进度条颜色-->
        <attr name="pro_bg_color" format="color"/> <!--进度条底色-->
        <attr name="pro_width" format="dimension"/> <!--进度条宽-->
        <attr name="pro_height" format="dimension"/> <!--进度条高-->
        <attr name="schedule" format="reference|integer"/> <!--当前进度0-100-->
        <attr name="schedule_max" format="reference|integer"/> <!--最大进度0-100-->
        <attr name="need_text" format="boolean"/><!--是否中点和终点需要文字和圆球-->
        <attr name="center_text" format="reference|string"/><!--中间文字-->
        <attr name="end_text" format="reference|string"/><!--终点文字-->
        <attr name="text_size" format="dimension"/> <!--文字大小-->
        <attr name="text_to_seekbar_height" format="dimension"/> <!--文字距离seekbar距离-->
        <attr name="text_color" format="color"/> <!--文字颜色-->
    </declare-styleable>

    <!--ViewPage指示器-->
    <declare-styleable name="TabIndicator">
        <attr name="lineColor" format="color"/> <!--指示线的颜色-->
        <attr name="lineHeight" format="dimension"/> <!--指示线的高度-->
        <attr name="selectTextColor" format="color"/> <!--选中文字颜色-->
        <attr name="noSelectTextColor" format="color"/> <!--未选中文字颜色-->
        <attr name="textSize" format="dimension"/> <!--文字大小-->
        <attr name="selectTextSize" format="dimension"/> <!--选中文字变大的文字大小-->
        <attr name="isShowDriver" format="boolean"/> <!--是否显示底部分割线-->
        <attr name="isAdjustMode" format="boolean"/> <!--标题是否平分屏幕宽度-->
        <attr name="textLRPadding" format="dimension"/> <!--文字的左右padding-->
        <attr name="indicatorPadding" format="dimension"/> <!--指示器左右padding-->
    </declare-styleable>

    <!--密码或者文本输入框，带清除和密码可见按钮-->
    <declare-styleable name="EditTextDelOrSee">
        <!--editText hint文字-->
        <attr name="edtHintText" format="reference|string"/>
        <!--输入的类型-->
        <attr name="inputType" format="enum">
            <enum name="text" value="0"/>
            <enum name="phone" value="1"/>
            <enum name="number" value="2"/>
            <enum name="password" value="3"/>
        </attr>
        <!--edittext最多输入长度-->
        <attr name="maxLength" format="integer|reference"/>
    </declare-styleable>

    <!--图形验证码-->
    <declare-styleable name="CodeImageView">
        <attr name="codeLength" format="integer"/> <!--验证码长度-->
        <attr name="bgColor" format="color"/> <!--背景色-->
        <attr name="lineNumber" format="integer"/> <!--干扰性数目-->
        <attr name="mTextSize" format="dimension"/> <!--文字大小-->
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension"/>
    </declare-styleable>
</resources>
