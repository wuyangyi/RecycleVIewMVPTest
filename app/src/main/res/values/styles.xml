<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/home_bottom</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--popwindow弹出动画-->
    <style name="style_activePopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="style_action_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_button_list_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#363951</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>

</resources>
