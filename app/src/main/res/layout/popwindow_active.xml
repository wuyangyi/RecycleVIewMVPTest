<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparency"
    android:gravity="bottom|center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_active_button"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/v_pop_item1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/general_for_line_light"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_pop_item1"
            style="@style/style_action_list_item" />

        <View
            android:id="@+id/v_pop_des"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_pop_des"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_normal_large"
            android:textColor="#363951"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone"/>

        <View
            android:id="@+id/v_pop_item2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_item2"
            style="@style/style_action_list_item" />

        <View
            android:id="@+id/v_pop_item3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_item3"
            style="@style/style_action_list_item" />

        <View
            android:id="@+id/v_pop_item4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_item4"
            style="@style/style_action_list_item" />

        <View
            android:id="@+id/v_pop_item5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_item5"
            style="@style/style_action_list_item" />

        <View
            android:id="@+id/v_pop_item6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/driver_height"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_item6"
            style="@style/style_action_list_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_active_button"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/v_pop_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/general_for_line_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_pop_bottom"
            style="@style/style_action_list_item"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>

