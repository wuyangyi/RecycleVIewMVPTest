<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ico_login_top"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="#88000000"
        android:textSize="14sp"
        android:text="跳过"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-20dp"
        android:layout_below="@id/iv_top"
        android:paddingTop="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_white_top_radio">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btnPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_login"
                android:button="@null"
                android:checked="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="密码登录"
                android:textColor="@drawable/selector_login_text_new"
                android:textSize="15sp" />
            <RadioButton
                android:id="@+id/btnCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_login"
                android:button="@null"
                android:checked="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="验证码登录"
                android:textColor="@drawable/selector_login_text_new" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:paddingBottom="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_login_bg_bottom_driver">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:src="@mipmap/ico_phone"/>
                <com.zz.recycleviewmvptest.widget.editview.EditTextDelOrSee
                    android:id="@+id/eds_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:inputType="phone"
                    app:edtHintText="请输入手机号"
                    app:maxLength="11"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPwd"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:paddingBottom="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_login_bg_bottom_driver">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:src="@mipmap/ico_pwd"/>
                <com.zz.recycleviewmvptest.widget.editview.EditTextDelOrSee
                    android:id="@+id/eds_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:inputType="password"
                    app:edtHintText="请输入6-20位的密码"
                    app:maxLength="20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImageCode"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:paddingBottom="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_login_bg_bottom_driver"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:src="@mipmap/ico_image_code"/>
                <com.zz.recycleviewmvptest.widget.editview.EditTextDelOrSee
                    android:id="@+id/eds_image_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:inputType="text"
                    app:edtHintText="请输入图形验证码"
                    app:maxLength="4"
                    android:layout_marginRight="20dp"/>
                <com.zz.recycleviewmvptest.widget.imageview.CodeImageView
                    android:id="@+id/civCode"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    app:height="30dp"
                    app:width="75dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llCode"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:paddingBottom="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_login_bg_bottom_driver">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:src="@mipmap/ico_code"/>
                <com.zz.recycleviewmvptest.widget.editview.EditTextDelOrSee
                    android:id="@+id/eds_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:inputType="phone"
                    app:edtHintText="请输入验证码"
                    app:maxLength="6"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/get_code_btn_id"
                    android:layout_width="70dp"
                    android:layout_height="27dp"
                    android:background="@drawable/selector_login_code"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@drawable/selector_login_code_text"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/btLogin"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue_20radio"/>
    </LinearLayout>
</RelativeLayout>